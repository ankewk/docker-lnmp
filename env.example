# LNMP Docker 环境配置文件
# 复制此文件为 .env 并根据需要修改

# PHP 版本选择 (7.4, 8.0, 8.1, 8.2, 8.3)
PHP_VERSION=8.2-fpm-alpine

# MySQL 版本选择 (5.7, 8.0, 8.1)
MYSQL_VERSION=8.0

# 端口配置
NGINX_PORT=8888
NGINX_SSL_PORT=443
NGINX_LB_PORT=8889
NGINX_LB_SSL_PORT=444
MYSQL_MASTER_PORT=33306
MYSQL_SLAVE_PORT=33307
PMA_PORT=8080

# 数据库配置
MYSQL_ROOT_PASSWORD=root123456
MYSQL_DATABASE=lnmp_db
MYSQL_USER=lnmp_user
MYSQL_PASSWORD=lnmp123456

# Redis配置
REDIS_VERSION=7-alpine
REDIS_PASSWORD=redis123456
REDIS_PORT=6379
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=redis123456
REDIS_COMMANDER_PORT=8081

# MongoDB配置
MONGODB_VERSION=7
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=mongodb123456
MONGO_DATABASE=lnmp_mongo
MONGO_PORT=27017

# Kafka配置
KAFKA_VERSION=7.4.0
KAFKA_PORT=9092
ZOOKEEPER_PORT=2181

# RabbitMQ配置
RABBITMQ_VERSION=3-management-alpine
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=rabbitmq123456
RABBITMQ_VHOST=/
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672 